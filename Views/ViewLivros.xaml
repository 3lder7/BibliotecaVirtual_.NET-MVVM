<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:bibliotecaVirtual_com_MVVM_.ViewModels"
             x:Class="bibliotecaVirtual_com_MVVM_.Views.ViewLivros"
             Title="Livros">

    <ContentPage.BindingContext>
        <viewModels:LivrosViewModel/>
    </ContentPage.BindingContext>

    <CollectionView ItemsSource="{Binding Livros}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="10" Padding="10" BorderColor="LightGray" CornerRadius="10">
                    <VerticalStackLayout>
                        <Image Source="{Binding ImagemUrl}" HeightRequest="150" Aspect="AspectFill"/>
                        <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="20"/>
                        <Label Text="{Binding Autor}" FontSize="16"/>
                        <Label Text="{Binding Status}" FontSize="14" TextColor="Gray"/>
                        <Label Text="{Binding QtdPaginas, StringFormat='PÃ¡ginas: {0}'}" FontSize="14"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
